<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SpinnerTextStyle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorHint">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/red</item> <!-- Color rojo -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="logo">@drawable/tu_logo</item>
    </style>


    <!-- Estilo para las etiquetas del formulario -->
    <style name="FormLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#2C5F2D</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <!-- Estilo para los campos de entrada -->
    <style name="FormInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">@drawable/border_button_sin_color</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#757575</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Estilo para los spinners -->
    <style name="FormSpinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/border_button_sin_color</item>
        <item name="android:padding">8dp</item>
        <item name="android:popupBackground">#FFFFFF</item>
    </style>

    <!-- Estilo para los botones -->
    <style name="FormButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">4dp</item>
    </style>


</resources>