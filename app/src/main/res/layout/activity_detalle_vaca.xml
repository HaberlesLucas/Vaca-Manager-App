<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#92D692"
    tools:context=".DetalleVaca">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardVistaDetalle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:orientation="vertical"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toTopOf="@+id/btnEditarEliminar"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNombreVaca"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="@drawable/border_nombre_vaca"
                android:paddingStart="15dp"
                android:paddingTop="9dp"
                android:layout_marginBottom="30dp"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/txtFechaNacimiento"
                android:layout_marginBottom="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_button_sin_color"
                android:paddingStart="15dp"
                android:paddingTop="9dp"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtNroCaravana"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:background="@drawable/border_button_sin_color"
                android:paddingStart="15dp"
                android:paddingTop="9dp"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/SnnUbicacion"
                android:layout_marginBottom="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_button_sin_color"
                android:paddingStart="15dp"
                android:paddingTop="9dp"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/SnnColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:background="@drawable/border_button_sin_color"
                android:paddingStart="15dp"
                android:paddingTop="9dp"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>



    <LinearLayout
        android:id="@+id/btnEditarEliminar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintWidth_percent="0.8">

        <Button
            android:id="@+id/btnEditarVaca"
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:background="@drawable/btn_verde"
            android:text="@string/editar"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/btnEliminarVaca"
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:background="@drawable/btn_rojo"
            android:text="@string/eliminar"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"/>

        </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
